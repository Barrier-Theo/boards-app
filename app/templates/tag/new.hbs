<div>
  {{#ui-form newValue=model  validation="save" cancel="cancel" bigIcon='user' smallIcon='plus' header='Tag' description='Adding an object'}}
    <div class="field">
      <label id="" class="" for="frmEdit-identity">Identity</label>
      <div id="div-frmEdit-identity" class="ui input">
        {{input id="frmEdit-identity" value=model.name placeholder="Name"}}
        <select class="ui compact selection dropdown">
        {{#each model.colors as |color|}}
          <option value="{{color}}">{{color}}</option>
        {{/each}}
        </select>
      </div>
    </div>
  {{/ui-form}}
</div>
{{outlet}}